<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.xsas.appsaludtest.ui.fragments.SeccionGeoreferenciacion2Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llCamposGeoreferenciacion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Código Postal"/>
                <EditText
                    android:id="@+id/etCodigoPostal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/contorno_redondo_fondo_blanco"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:maxLines="1"
                    android:inputType="numberSigned"
                    android:hint="Código Postal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Localidad o Colonia"/>
                <Spinner
                    android:id="@+id/sLocalidadColonia"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/contorno_redondo_fondo_blanco"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calle"/>
                <EditText
                    android:id="@+id/etCalle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/contorno_redondo_fondo_blanco"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:maxLines="1"
                    android:hint="Calle"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. Exterior"/>
                <EditText
                    android:id="@+id/etNoExterior"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/contorno_redondo_fondo_blanco"
                    android:inputType="numberSigned"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:maxLines="1"
                    android:hint="No. Exterior"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. Interior"/>
                <EditText
                    android:id="@+id/etNoInterior"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/contorno_redondo_fondo_blanco"
                    android:inputType="numberSigned"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:maxLines="1"
                    android:hint="No. Interior"/>
            </LinearLayout>

            <Button
                android:id="@+id/bConfirmar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/boton_confirmar"
                android:text="Confirmar"
                android:textAllCaps="false"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>