<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">
    <Button
        android:textColor="#FFF"
        android:id="@+id/bDesplegar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAccent"
        android:text="Nombre persona"/>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llAntescedentes4">
    <Button
        android:background="@drawable/boton_secundario"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FUM"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>
    <Button
        android:layout_marginTop="10dp"
        android:background="@drawable/boton_secundario"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FPP"
        android:layout_alignParentBottom="true"/>
    <EditText
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/contorno_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edad gestional (semanas)"/>
    <EditText
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/contorno_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Menarca"/>
    <EditText
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/contorno_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RM (Rit. Menstr)"/>
    <EditText
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/contorno_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IRS"/>
    </LinearLayout>

</LinearLayout>