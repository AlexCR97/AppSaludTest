<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <Button
        android:id="@+id/bDesplegar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary"
        android:text="Desplegar"
        android:textAllCaps="false"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:id="@+id/llOtros2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Adicciones-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicciones"
            android:textAlignment="center"
            android:textSize="20sp"/>

        <Spinner
            android:id="@+id/sAdicciones"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/contorno_redondo_fondo_blanco"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/fbAdcciones"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap">

            <Button
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@drawable/boton_verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tabaquismo"
                android:textAllCaps="false"
                android:textSize="12sp"/>

            <Button
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@drawable/boton_verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alcoholismo"
                android:textAllCaps="false"
                android:textSize="12sp"/>

            <Button
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@drawable/boton_verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DrogadicciÃ³n"
                android:textAllCaps="false"
                android:textSize="12sp"/>

        </com.google.android.flexbox.FlexboxLayout>

        <!--Discapacidades-->
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discapacidades"
            android:textAlignment="center"
            android:textSize="20sp"/>
        <Spinner
            android:id="@+id/sDiscapacidades"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/contorno_redondo_fondo_blanco"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/fbDiscapacidades"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap">

            <Button
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@drawable/boton_verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visual"
                android:textAllCaps="false"
                android:textSize="15sp"/>

            <Button
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@drawable/boton_verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auditiva"
                android:textAllCaps="false"
                android:textSize="15sp"/>

            <Button
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@drawable/boton_verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motriz"
                android:textAllCaps="false"
                android:textSize="15sp"/>
            <Button
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@drawable/boton_verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lenguaje"
                android:textAllCaps="false"
                android:textSize="15sp"/>
            <Button
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@drawable/boton_verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensorial"
                android:textAllCaps="false"
                android:textSize="15sp"/>

        </com.google.android.flexbox.FlexboxLayout>


    </LinearLayout>

</LinearLayout>